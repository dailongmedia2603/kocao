# API Server Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_VERSION=2.0.0
API_RELOAD=true
API_LOG_LEVEL=info

# CORS Configuration
CORS_ALLOW_ORIGINS=*
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*

# Upload/Download Configuration
UPLOAD_DIR=uploads
MAX_VIDEOS_LIMIT=1000

# Whisper Transcription Configuration
WHISPER_MODEL_NAME=base
WHISPER_DEVICE=auto
WHISPER_COMPUTE_TYPE=auto
WHISPER_BEAM_SIZE=5
WHISPER_VAD_FILTER=true
WHISPER_CPU_THREADS=0
WHISPER_NUM_WORKERS=4

# VAD (Voice Activity Detection) Parameters
VAD_THRESHOLD=0.5
VAD_MIN_SPEECH_DURATION_MS=250
VAD_MAX_SPEECH_DURATION_S=inf
VAD_MIN_SILENCE_DURATION_MS=2000
VAD_SPEECH_PAD_MS=400

# Whisper Advanced Parameters
WHISPER_COMPRESSION_RATIO_THRESHOLD=2.4
WHISPER_LOG_PROB_THRESHOLD=-1.0
WHISPER_NO_SPEECH_THRESHOLD=0.6
WHISPER_PATIENCE=1.0
WHISPER_LENGTH_PENALTY=1.0
WHISPER_REPETITION_PENALTY=1.0
WHISPER_NO_REPEAT_NGRAM_SIZE=0
WHISPER_MAX_INITIAL_TIMESTAMP=1.0

# TikTok Scraper Configuration
TIKTOK_DOWNLOAD_FORMAT=best
TIKTOK_QUIET=false