# API Server Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_VERSION=2.0.0

# Development: true, Production: false
API_RELOAD=false

API_LOG_LEVEL=info

# CORS Configuration
# Examples:
#   Development: *
#   Production: https://yourdomain.com,https://app.yourdomain.com
CORS_ALLOW_ORIGINS=*
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*

# Upload/Download Configuration
UPLOAD_DIR=uploads
MAX_VIDEOS_LIMIT=1000

# Whisper Transcription Configuration
# Model options: tiny, base, small, medium, large-v2, large-v3
WHISPER_MODEL_NAME=small

# Device: auto (recommended), cuda, cpu
WHISPER_DEVICE=auto

# Compute type: auto (recommended), int8, float16, float32
WHISPER_COMPUTE_TYPE=auto

# Quality settings
WHISPER_BEAM_SIZE=5         # 1=fastest, 5=balanced, 10=best quality
WHISPER_VAD_FILTER=true     # Enable for 2-3x speedup
WHISPER_CPU_THREADS=0       # 0=auto-detect optimal threads
WHISPER_NUM_WORKERS=4       # Parallel workers

# VAD (Voice Activity Detection) Parameters
VAD_THRESHOLD=0.5
VAD_MIN_SPEECH_DURATION_MS=250
VAD_MAX_SPEECH_DURATION_S=inf
VAD_MIN_SILENCE_DURATION_MS=2000
VAD_SPEECH_PAD_MS=400

# Whisper Advanced Parameters
WHISPER_COMPRESSION_RATIO_THRESHOLD=2.4
WHISPER_LOG_PROB_THRESHOLD=-1.0
WHISPER_NO_SPEECH_THRESHOLD=0.6
WHISPER_PATIENCE=1.0
WHISPER_LENGTH_PENALTY=1.0
WHISPER_REPETITION_PENALTY=1.0
WHISPER_NO_REPEAT_NGRAM_SIZE=0
WHISPER_MAX_INITIAL_TIMESTAMP=1.0

# TikTok Scraper Configuration
TIKTOK_DOWNLOAD_FORMAT=best
TIKTOK_QUIET=false

# Storage Configuration
# Public URL for accessing uploaded files
STORAGE_BASE_URL=http://36.50.54.74:8000/storage